<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - FloraCFHN.InterfazGraficaMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FloraCFHN.InterfazGraficaMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

</head>             

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light text-white bg-dark border-bottom box-shadow mb-3 ">
    <div class="container-fluid">
        <a class="navbar-brand text-white" asp-area="" asp-controller="" asp-action="">Flora´s</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        @if (User.Identity.IsAuthenticated && User.IsInRole("ADMINISTRADOR"))
        {
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Planta" asp-action="Index">Plantas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Categoria" asp-action="Index">Categorias</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Rol" asp-action="Index">Rol</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Usuario" asp-action="Index">Usuario</a>
                    </li>
                </ul>

                <ul class="nav navbar-right">
                    <li class="nav-item"><a class="nav-link text-white" asp-area="" asp-controller="Usuario" asp-action="CambiarPassword">Cambiar password</a></li>
                    <li class="nav-item"><a class="nav-link text-primary" asp-area="" asp-controller="Usuario" asp-action="CerrarSesion">Cerrar Sesión</a></li>
                </ul>
            </div>

            @* <a class="nav-link" asp-area="" asp-controller="Catalogo" asp-action="Index">Ver Catalogo</a> *@
            <a class="nav-item text-white" href="@Url.Action("Index","Catalogo")">Ver catalogo</a>
        }
        @if (User.Identity.IsAuthenticated && User.IsInRole("CLIENTE"))
        {
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Catalogo" asp-action="Index">Catalogo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Usuario" asp-action="CerrarSesion">Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        }
    </div>
</nav>

<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container">
            &copy; 2023 - FloraCFHN.InterfazGraficaMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
