@model FloraCFHN.EntidadesDeNegocio.Usuario

@{
    ViewData["Title"] = "Eliminar";
}

<body style="background-color:#F2F4F4;">
    <h1>Eliminar el usuario</h1>

    <h3>¿Está seguro que desea eliminar este registro?</h3>
    <div>
    
        <hr />
        <dl class="row">
        
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Apellido)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Apellido)
            </dd>
            <dt class = "col-sm-2">
                Teléfono
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Telefono)
            </dd>
            <dt class = "col-sm-2">
                Usuario
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Login)
            </dd>
        
            <dt class = "col-sm-2">
                Rol
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Rol.Nombre)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Estatus)
            </dt>
            @if (Model.Estatus == 1)
            {
                <dd class="col-sm-10">
                    ACTIVO
                </dd>
            }
            else if (Model.Estatus == 2)
            {
                <dd class="col-sm-10">
                    INACTIVO
                </dd>
            }
            else
            {
                <dd class="col-sm-10"> </dd>
            }

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaRegistro)
            </dd>
        </dl>

        <br />

        <form asp-action="Delete">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> &nbsp; &nbsp;
            <a asp-action="Index" class="btn btn-dark">Cancelar</a>
        </form>
        <span class="text-danger">@ViewBag.Error</span>  
    </div>
</body>


